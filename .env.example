# FastAPI Application
APP_NAME=DiffRhythm FastAPI Service
APP_ENV=development
APP_DEBUG=false
API_VERSION=0.1.0
LOG_LEVEL=INFO
API_PREFIX=/api
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Paths & Storage
STORAGE_DIR=./storage
MODEL_CACHE_DIR=./models/cache
OUTPUT_DIR=./output
TEMP_DIR=./temp

# Databases / Queues
DATABASE_URL=sqlite:///./storage/app.db
REDIS_URL=redis://localhost:6379

# AI Runtime
CUDA_VISIBLE_DEVICES=0  # Set to "" for CPU mode

# External Service URLs
AI_SERVICE_URL=http://localhost:8000
WEB_SERVICE_URL=http://localhost:3000
PY_DIFFRHYTHM_URL=http://localhost:8001

# API Keys (replace with real credentials)
GEMINI_API_KEY=your_gemini_api_key_here
FRESHTUNES_API_KEY=your_freshtunes_api_key_here
YOUTUBE_CLIENT_ID=your_youtube_client_id_here
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret_here

# Backend (Node) Configuration
NODE_ENV=development
PORT=3001

# Media Processing
FFMPEG_PATH=ffmpeg

# Performance
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=600  # seconds
